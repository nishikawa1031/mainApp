<!DOCTYPE html>
<html>
  <head>
    <title>Work in Japan</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= favicon_link_tag('favicon.png') %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% if Rails.env.production? %>
      <%= render 'layouts/google_analytics' %>
    <% end %>
  </head>

  <body class="pastel-blue-gradient">
    <div class="container main-container">
      <header style="display: flex; align-items: center; justify-content: space-between; padding: 10px;">
        <%= link_to root_path do %>
          <h1 style="margin: 0; cursor: pointer;">Work in Japan</h1>
        <% end %>

        <div style="display: flex;">
          <%= link_to '採用企業様はこちら', applicants_path, style: "color: blue; text-decoration: none; padding: 10px;" %>
          <% if current_user %>
            <div>
              <%= "current_user: #{current_user&.id}" =%>
            </div>
            <div>
              <%= button_to 'Logout', 'auth/logout', method: :get, data: { turbo: false }, class: "button-modern" %>
            </div>
          <% else %>
            <div style="display: flex;">
              <%= button_to 'Login', '/auth/auth0', method: :post, data: { turbo: false }, class: "button-modern" %>
            </div>
          <% end %>
        </div>
      </header>
      <%= yield %>
    </div>
    <%= render "layouts/footer" %>
  </body>
</html>
