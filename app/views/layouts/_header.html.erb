          <%= image_tag current_user&.avatar, id: "dropdownMenuButton", alt: "Avatar"%>
        <% else %>
          <img id="dropdownMenuButton" src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img (31).webp" alt="Avatar" loading="lazy" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"/>
        <% end %>
      </div>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <div class="dropdown-item">
          <%= link_to "マイページ", user_path(current_user.username), class:"p-2 text-dark btn-sm" %>
        </div>
        <div class="dropdown-item">
          <%= link_to "ブックマーク", user_path(current_user.username, key: "bookmarks"), class:"p-2 text-dark btn-sm" %>
        </div>
        <div class="dropdown-item">
          <%= link_to "いいね", user_path(current_user.username, key: "likes"), class:"p-2 text-dark btn-sm" %>
        </div>
        <div class="dropdown-item">
          <%= link_to "下書き", user_path(current_user.username, key: "draft"), class:"p-2 text-dark btn-sm" %>
        </div>
