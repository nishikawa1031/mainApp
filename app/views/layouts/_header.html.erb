<div class="d-flex flex-column flex-md-row align-items-center px-md-4 pt-2 bg-primary shadow-sm">
  <h5 class="my-0 mr-md-auto font-weight-normal">
    <%= link_to "Buy Docs", articles_path, class:"pl-2 text-light" %>
  </h5>
  <form class="form-inline my-2 my-lg-0 pl-2">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
  <% if user_signed_in? %>
    <div class="dropdown pl-2 pr-2">
      <% if @user.avatar.attached? %>
        <%= image_tag @article&.user&.avatar, class: 'rounded-circle mb-3', id: "dropdownMenuButton", style: 'width: 150px', alt: "Avatar" %>
      <% else %>
        <img id="dropdownMenuButton" src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img (31).webp" class="rounded-circle" height="40" alt="Avatar" loading="lazy" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"/>
      <% end %>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <div class="dropdown-item">
          <%= link_to "edit", edit_user_registration_path, class:"p-2 text-dark" %>
        </div>
        <div class="dropdown-item">
          <%= link_to "下書き", articles_path(status: "draft"), class:"p-2 text-dark" %>
        </div>
        <div class="dropdown-item">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"btn btn-light" %>
        </div>
      </div>
    </div>
  <% else %>
    <nav class="my-2 my-md-0 mr-md-3 pl-2">
      <%= link_to "ログイン", new_user_session_path, class:"btn btn-outline-light" %>
    </nav>
    <nav class="my-2 my-md-0 mr-md-3">
      <%= link_to "新規登録", new_user_registration_path, class:"btn btn-light" %>
    </nav>
  <% end %>
  </li>
  <nav class="my-2 my-md-0 mr-md-3">
    <%= link_to "投稿する", new_article_path, class:"btn btn-outline-light" %>
  </nav>
</div>