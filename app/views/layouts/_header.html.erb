<header class="header-container">
  <%= link_to 'Work in Japan', root_path, class: "header-title-link" %>

  <div class="header-links">
    <% if current_page?(root_path) %>
      <%= link_to '採用企業様はこちら', applicants_path, class: "header-link" %>
    <% else %>
      <%= link_to 'Job seekers, click here', root_path, class: "header-link" %>
    <% end %>

    <% if current_user %>
      <div class="user-info">
        <%= link_to "#{current_user.email}", user_path(current_user.id), class: "header-link" %>
      </div>
      <div class="logout-button">
        <%= button_to 'Logout', 'auth/logout', method: :get, data: { turbo: false }, class: "button-modern" %>
      </div>
    <% else %>
      <div class="login-button">
        <%= button_to 'Login', '/auth/auth0', method: :post, data: { turbo: false }, class: "button-modern" %>
      </div>
    <% end %>
  </div>
</header>
