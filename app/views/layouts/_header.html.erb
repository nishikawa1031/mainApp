<header class="header-container">
  <%= link_to 'Job in Japan', root_path, class: "header-title-link" %>

  <div class="header-links">
    <% if current_user %>
      <% if current_user&.employee? || current_user&.admin? %>
        <% if current_page?(root_path) %>
          <%= link_to '採用企業様はこちら', applicants_path, class: "header-link", style: "text-decoration: none;" %>
        <% else %>
          <%= link_to 'Job seekers, click here', root_path, class: "header-link", style: "text-decoration: none;" %>
        <% end %>
      <% else %>
        <% unless current_page?(root_path) %>
          <%= link_to 'Job seekers, click here', root_path, class: "header-link", style: "text-decoration: none;" %>
        <% end %>
      <% end %>
    <% else %>
      <% if current_page?(root_path) %>
          <%= link_to '採用企業様はこちら', home_index_path, class: "header-link", style: "text-decoration: none;" %>
      <% else %>
          <%= link_to 'Job seekers, click here', root_path, class: "header-link", style: "text-decoration: none;" %>
      <% end %>
    <% end %>

    <% if current_user %>
      <div class="user-info">
        <%= link_to "#{current_user.email}", user_path(current_user.id), class: "header-link", style: "text-decoration: none; color: #000; font-size: 15px;" %>
      </div>
      <% if false %>
      <div class="notification-bell">
        <i class="fas fa-bell" style="color: black;"></i>
        <span class="notification-badge">0</span>
      </div>
      <% end %>
      <div class="logout-button">
        <%= button_to 'Logout', 'auth/logout', method: :get, data: { turbo: false }, class: "button-modern" %>
      </div>
    <% else %>
      <div class="login-button">
        <%= button_to 'Login', '/auth/auth0', method: :post, data: { turbo: false }, class: "button-modern" %>
      </div>
    <% end %>
  </div>
</header>
