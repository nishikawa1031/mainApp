  <% if @article.bookmarked_by?(current_user) %>
    <%= link_to article_bookmarks_path(@article), class: "px-2", style:"text-align: right; color: black;", method: :delete do %>
      <i class="fa-solid fa-bookmark fa-2x"></i>
    <% end %>
  <% else %>
    <%= link_to article_bookmarks_path(@article), class: "px-2", style:"text-align: right; color: black;", method: :post do %>
      <i class="fa-regular fa-bookmark fa-2x"></i>
    <% end %>
  <% end %>