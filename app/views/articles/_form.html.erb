<div class="card create-new">
  <div class="card-body">
    <h3 class="card-title px-2"><%= Time.current.strftime('%Y年%m月%d日') %></h3>
    <%= form_with(model: article) do |form| %>
      <% if article.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

          <ul>
            <% article.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.date_field :start_time, value: Date.today %>
      </div>

      <div>
        <h3>関連する人々</h3>
        <%= form.fields_for :people, article.people.build do |person_form| %>
          <%= person_form.label :name %>
          <%= person_form.text_field :name %>
        <% end %>
      </div>

      <div>
        <%= form.label :body, style: "display: block" %>
        <%= form.text_area :body, style: "width: 100%; height: 80vh;" %>
      </div>

      <div class="p-2">
        <%= form.submit '保存', class: "btn", style:"background-color: black; color: white;"%>
      </div>
    <% end %>
  </div>
</div>

