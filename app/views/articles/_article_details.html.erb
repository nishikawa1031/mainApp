<div class="card">
  <div class="avatar">
    <% if @user.avatar.attached? %>
      <%= image_tag @article&.user&.avatar, class: 'rounded-circle mb-3', style: 'width: 150px', alt: "Avatar" %>
    <% else %>
      <%= image_tag ("default.jpg"), class: 'rounded-circle mb-3', style: 'width: 150px', alt: "Avatar" %>
    <% end %>
  </div>
  <p>
    <%= @article.user.email %>
  </p>
  <small>
    <%= @article.created_at %>
  </small>
  <h5 class="card-title"><%= @article.title %></h5>
  <p>
    <%= @article.body %>
  </p>
</div>
