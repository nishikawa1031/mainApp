<p style="color: green"><%= notice %></p>
<script src="https://accounts.google.com/gsi/client" async defer></script>
  <div id="g_id_onload"
    data-client_id="YOUR_GOOGLE_CLIENT_ID"
    data-login_uri="http://localhost:3000/google_login_api/callback"
    data-auto_prompt="false">
  </div>
  <div class="g_id_signin"
    data-type="standard"
    data-size="large"
    data-theme="outline"
    data-text="sign_in_with"
    data-shape="rectangular"
    data-logo_alignment="left">
  </div>
  <div class="row">
    <div class="col-sm-2 text-center">
      <p>ユーザーランキング</p>
      <hr>
      <div id="users">
        <% @users.each do |user| %>
          <%= render user %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-8">
      <div id="articles">
        <% @articles.each do |article| %>
          <%= render article %>
        <% end %>
      </div>
      <%= paginate @articles %>
      <% if Rails.env == "development" %>
        <p>
          debug用に記事数を表示:<%= @number_of_articles %>
        </p>
      <% end %>
    </div>
  <% if false %>
    TODO: カテゴリ一覧は、とりあえず表示しない。
    <div class="col-sm-2">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">カテゴリ一覧</h5>
          <p class="card-text">
            <% @categories.each do |category| %>
              <%= category.name %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
  </div>
