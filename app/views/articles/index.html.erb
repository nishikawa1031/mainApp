<p style="color: green"><%= notice %></p>

<div class="row">
  <div class="col-sm-10">
    <%= month_calendar(events: @articles) do |date, articles| %>
      <div class="day">
        <%= date.day %>
      <% articles.each do |article| %>
        <div class="card-header">
          <h5 class="card-title">
            <%= link_to article.title, article %>
          </h5>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="col-sm-2">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">名前</h5>
          <p class="card-text">
            <% @persons.each do |person| %>
              <%= person.name %><br>
            <% end %>
          </p>
        </div>
    </div>
  </div>
</div>
