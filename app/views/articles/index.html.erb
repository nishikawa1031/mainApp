<p style="color: green"><%= notice %></p>
  <div class="row">
    <div class="col-sm-2 text-center">
      <p>ユーザーランキング</p>
      <hr>
      <div id="users">
        <% @users.each do |user| %>
          <%= render user %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-8">
      <div id="articles">
        <% @articles.each do |article| %>
          <%= render article %>
        <% end %>
      </div>
      <%= paginate @articles %>
      <% if Rails.env == "development" %>
        <p>
          debug用に記事数を表示:<%= @number_of_articles %>
        </p>
      <% end %>
    </div>
  <% if false %>
    TODO: カテゴリ一覧は、とりあえず表示しない。
    <div class="col-sm-2">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">カテゴリ一覧</h5>
          <p class="card-text">
            <% @categories.each do |category| %>
              <%= category.name %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
  </div>
