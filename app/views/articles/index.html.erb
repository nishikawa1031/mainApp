<p style="color: green"><%= notice %></p>
  <div class="row">
    <%= month_calendar(events: @articles, number_of_weeks: 2) do |date, articles| %>
      <div class="day">
        <%= date.day %>
      <% articles.each do |article| %>
        <div class="card-header">
          <h5 class="card-title">
            <%= link_to article.title, article %>
          </h5>
        </div>
     <% end %>
    <% end %>
  </div>
  <div class="row">
    <div class="col-sm-10 mt-3">
      <div class="row" id="articles">
        <% @articles.each do |article| %>
          <div class="col-sm-3 mb-3">
            <%= render article %>
          </div>
        <% end %>
      </div>
      <%= paginate @articles %>
      <% if Rails.env == "development" %>
        <p>
          debug用に記事数を表示:<%= @number_of_articles %>
        </p>
      <% end %>
    </div>
  <% if false %>
    TODO: カテゴリ一覧は、とりあえず表示しない。
    <div class="col-sm-2">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">カテゴリ一覧</h5>
          <p class="card-text">
            <% @categories.each do |category| %>
              <%= category.name %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
  </div>
