<div style="display: flex; align-items: center; padding: 2px; text-align: center;">
  <h1 style="flex: 1; font-size: 5em; text-align: right; margin-bottom: 0; font-weight: bold;">日本で働く</br>海外の方を探す</h1>
  <img src="<%= asset_path('World-10.png') %>" alt="Matches Logo" style="flex: 1; width: auto; max-width: 100%;">
</div>

<p style="color: green"><%= notice %></p>

<div class="row">
  <% @applicants.each do |applicant| %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <%= render applicant %>
          <p class="card-text">
            <%= link_to "Show this applicant", applicant, class: "btn btn-primary" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
