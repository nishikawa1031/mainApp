<%= form_with(model: applicant, class: "needs-validation", novalidate: true) do |form| %>
  <% if applicant.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">Oops! <%= pluralize(applicant.errors.count, "error") %> prohibited this applicant from being saved:</h4>

      <ul>
        <% applicant.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%if false %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :birthday, class: "form-label" %>
    <%= form.date_field :birthday, class: "form-control" %>
  </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :files, class: "form-label" %>
    <%= form.file_field :files, multiple: true, class: "form-control" %>
  </div>

  <%if false %>
  <div class="mb-3">
    <%= form.label :nationality, class: "form-label" %>
    <%= form.number_field :nationality, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :phone_number, class: "form-label" %>
    <%= form.number_field :phone_number, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :self_introduction, class: "form-label" %>
    <%= form.text_area :self_introduction, class: "form-control", rows: 5 %>
  </div>

  <div class="mb-3">
    <%= form.label :desired_salary, class: "form-label" %>
    <%= form.text_area :desired_salary, class: "form-control", rows: 5 %>
  </div>

  <div class="mb-3">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
<% end %>
