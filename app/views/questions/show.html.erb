<p style="color: green"><%= notice %></p>

<div class="row">
    <div class="row">
        <div class="card">
            <h5 class="card-title" style="text-align: left; margin: 10px">
                <%= @question %>
            </h5>
        <div>
        <hr>
        <% @answer.each do |a| %>
            <div style="margin: 3px">
                <div class="card">
                    <%= a %>
                    <br>
                </div>
            </div>
        <% end %>
        <hr>
        <% @additional_answer.each.with_index(1) do |text, index| %>
        <div style="margin-bottom: 3px">
            <div class="card">
            <%= text %>
            <%= form_with url: subject_year_question_path, method: :post, remote: true do |form| %>
                <%= form.hidden_field :answer, value: index %>
                <%= form.submit '選択' %>
            <% end %>
            <br>
            </div>
        </div>
        <% end %>
        </div>
    </div>
</div>

