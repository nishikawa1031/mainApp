<p style="color: green"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <div class="row">
        <div class="card">
            <h5 class="card-title" style="text-align: left; margin: 10px">
                <%= @question %>
            </h5>
        <div>
        <hr>
        <% @answer.each do |a| %>
            <div style="margin: 3px">
                <div class="card">
                    <%= a %>
                    <br>
                </div>
            </div>
        <% end %>
        <hr>
        <% @additional_answer.each do |a| %>
            <div style="margin-bottom: 3px">
                <div class="card">
                    <%= a %>
                    <br>
                </div>
            </div>
        <% end %>
        </div>
    </div>
</div>

