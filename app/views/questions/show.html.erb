<p style="color: green"><%= notice %></p>

<div class="row">
    <% if @correct %>
        <div style="text-align: center">correct</div>
    <% else %>
        <div style="text-align: center">not</div>
    <% end %>
    <div class="card">
        <h5 class="card-title" style="text-align: left; margin: 20px">
            <%= @question %>
        </h5>
    <div>
    <% @answer.each do |text| %>
        <div style="margin: 0px 15px 8px;">
            <%= text %>
            <br>
        </div>
    <% end %>
    <hr>
    <% @additional_answer.each.with_index(1) do |text, index| %>
    <div style="margin-bottom: 3px">
        <div class="card">
        <%= text %>
        <%= form_with url: subject_year_question_path, method: :post, remote: true do |form| %>
            <%= form.hidden_field :answer, value: index %>
            <%= form.submit '選択' %>
        <% end %>
        <br>
        </div>
    </div>
    <% end %>
    </div>
</div>

