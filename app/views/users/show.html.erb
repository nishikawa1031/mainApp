<div class="container bg-light" style="width: 90%;">
  <div class="row">
    <div class="col-sm-4 text-center">
      <div class="card">
        <%= render "/users/avatar" %>
        <div class="card-body">
          <h5 class="card-title"><%= "#{current_user.email}" %></h5>
          <hr>
          <% if current_user?(@user) %>
           <%= link_to "Edit Profile", edit_user_path(current_user), class: "btn btn-primary btn-sm" %> 
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body" style="background-color: rgb(40, 43, 43); color: white;">
          <img src="<%= asset_path('World-14.png') %>" alt="Matches Logo" style="flex: 1; width: auto; max-width: 100%;">
          <!-- ここにユーザーのプロフィール情報を表示 -->
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-sm-12">
      <div id="articles">
        <% @articles.each do |article| %>
          <%= render "articles/article", article: article %>
        <% end %>
      </div>
      <%= paginate @articles %>
      <% if Rails.env == "development" %>
        <p class="text-muted mt-3">
          Debug: <%= @number_of_articles %> draft articles
        </p>
      <% end %>
    </div>
  </div>
</div>
