<div class="container bg-light">
<p style="color: green"><%= notice %></p>
  <div class="row">
    <div class="col-sm-4 text-center">
        <div class="card">
          <%= render "/users/avatar" %>
          <%= "@#{@user.username}" %>
          <hr>
          <% if current_user?(@user) %>
            <%= link_to "edit", edit_user_registration_path, class:"p-2 text-dark btn-sm" %>
          <% end %>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="card">
          <div class="card-body text-light" style="background-color: rgb(40, 43, 43);">
              <p class="card-text">下書きの数：<%= @number_of_draft_articles %></p>
              <p>公開中の記事の数：<%= @number_of_published_articles %></p>
              <p>ブックマークした記事の数：<%= @number_of_bookmarked_articles %></p>
              <p>いいねした記事の数：<%= @number_of_liked_articles %></p>
          </div>
        </div>
        <br>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4 text-center">
    </div>
    <div class="col-sm-8">
      <div id="articles">
        <% @articles.each do |article| %>
          <%= render article %>
        <% end %>
      </div>
      <%= paginate @articles %>
      <% if Rails.env == "development" %>
        <p>
          debug用に下書きの記事数を表示:<%= @number_of_articles %>
        </p>
      <% end %>
    </div>
  </div>
</div>